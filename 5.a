//5.a sort the age and arrange them in ascending order using bubble sort
#include <stdio.h>
#include <stdbool.h>

    void
    swap(int *a, int *b)
{
    int t = *a;
    *a = *b;
    *b = t;
}

void bubbleSort(int a[], int n)
{
    for (int i = 0; i < n - 1; i++)
    {
        bool swapped = false;
        for (int j = 0; j < n - 1 - i; j++)
        {
            if (a[j] > a[j + 1])
            {
                swap(&a[j], &a[j + 1]);
                swapped = true;
            }
        }
        if (!swapped)
            break; // already sorted
    }
}
int main()
{
    int n;
    printf("Enter number of applicants: ");
    if (scanf("%d", &n) != 1 || n <= 0)
    {
        printf("Invalid size.\n");
        return 0;
    }
    
    int ages[n];
    printf("Enter ages of applicants:\n");
    for (int i = 0; i < n; i++)
        scanf("%d", &ages[i]);

    bubbleSort(ages, n);

    printf("\nSorted ages in ascending order:\n");
    for (int i = 0; i < n; i++)
        printf("%d ", ages[i]);
    printf("\n");
    return 0;
}
